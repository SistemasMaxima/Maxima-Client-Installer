{
  "compilerOptions": {
    "target": "ES2020",
    "module": "ESNext", // Use a browser-compatible module system
    "moduleResolution": "node",
    "outDir": "./../../dist/src/app/scripts",  // Compile output into the dist/src folder
    "strict": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "resolveJsonModule": true,
    "isolatedModules": true
  },
  "include": ["./**/*.ts"] // Compile all .ts files within this 'src' folder
}
